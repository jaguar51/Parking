<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane
        xmlns="http://javafx.com/javafx/8"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="me.academeg.controller.RentBoxController">

    <GridPane
            gridLinesVisible="false"
            hgap="10"
            vgap="10"
            AnchorPane.topAnchor="5.0"
            AnchorPane.leftAnchor="5.0"
            AnchorPane.rightAnchor="5.0"
            AnchorPane.bottomAnchor="5.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES"/>
            <ColumnConstraints hgrow="SOMETIMES"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
        </rowConstraints>

        <Label
                text="Выберите бокс для аренды:"
                GridPane.columnIndex="0"
                GridPane.halignment="LEFT"
                GridPane.rowIndex="0"/>
        <ComboBox
                fx:id="lotsCB"
                maxWidth="Infinity"
                GridPane.columnIndex="0"
                GridPane.columnSpan="2"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="1"/>

        <Label
                text="Выберите дату начала аренды:"
                GridPane.columnIndex="0"
                GridPane.halignment="LEFT"
                GridPane.rowIndex="2"/>

        <DatePicker
                fx:id="startRentDP"
                maxWidth="Infinity"
                GridPane.columnIndex="0"
                GridPane.columnSpan="2"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="3"/>

        <Label
                text="Выберите дату окончания аренды:"
                GridPane.columnIndex="0"
                GridPane.halignment="LEFT"
                GridPane.rowIndex="4"/>

        <DatePicker
                fx:id="endRentDP"
                maxWidth="Infinity"
                GridPane.columnIndex="0"
                GridPane.columnSpan="2"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="5"/>

        <TextField
                fx:id="coastTF"
                promptText="Введите стоимость стоянки за 1 день"
                GridPane.columnIndex="0"
                GridPane.columnSpan="2"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="6"/>

        <Label
                text="Сотрудник:"
                GridPane.columnIndex="0"
                GridPane.halignment="LEFT"
                GridPane.rowIndex="7"/>

        <ComboBox
                fx:id="employeesCB"
                maxWidth="Infinity"
                GridPane.columnIndex="0"
                GridPane.columnSpan="2"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="8"/>

        <Label
                text="Клиент:"
                GridPane.columnIndex="0"
                GridPane.halignment="LEFT"
                GridPane.rowIndex="9"/>

        <ComboBox
                fx:id="clientsCB"
                maxWidth="Infinity"
                GridPane.columnIndex="0"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="10"/>

        <Button
                maxWidth="Infinity"
                text="Добавить клиента"
                GridPane.columnIndex="1"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="10"/>

        <Button
                fx:id="rentBTN"
                onMouseClicked="#rentLot"
                maxWidth="Infinity"
                text="Арендовать"
                GridPane.columnIndex="0"
                GridPane.columnSpan="2"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="11"/>

    </GridPane>
</AnchorPane>
