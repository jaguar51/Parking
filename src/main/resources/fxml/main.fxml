<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<AnchorPane
        xmlns="http://javafx.com/javafx/8"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="me.academeg.controller.MainController">

    <GridPane
            gridLinesVisible="false"
            hgap="10"
            vgap="10"
            AnchorPane.topAnchor="5.0"
            AnchorPane.leftAnchor="5.0"
            AnchorPane.rightAnchor="5.0"
            AnchorPane.bottomAnchor="5.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
        </rowConstraints>

        <Button
                text="Арендовать бокс"
                onMouseClicked="#rentBox"
                maxWidth="Infinity"
                GridPane.columnIndex="0"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="0"/>
        <Button
                text="Поставить автомобиль на стоянку"
                onMouseClicked="#parkCar"
                maxWidth="Infinity"
                GridPane.columnIndex="0"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="1"/>
        <Button
                text="Забрать автомобиль"
                onMouseClicked="#takeAutoClick"
                maxWidth="Infinity"
                GridPane.columnIndex="0"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="2"/>

        <Button
                text="Количество свободных боксов"
                onMouseClicked="#showFreeLotAlert"
                maxWidth="Infinity"
                GridPane.columnIndex="0"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="3"/>

    </GridPane>
</AnchorPane>
