<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import tornadofx.control.DateTimePicker?>
<AnchorPane
        xmlns="http://javafx.com/javafx/8"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="me.academeg.controller.ParkCarController">

    <GridPane
            gridLinesVisible="false"
            hgap="10"
            vgap="10"
            AnchorPane.topAnchor="5.0"
            AnchorPane.leftAnchor="5.0"
            AnchorPane.rightAnchor="5.0"
            AnchorPane.bottomAnchor="5.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES"/>
            <ColumnConstraints hgrow="SOMETIMES"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
        </rowConstraints>

        <Label
                text="Клиент:"
                GridPane.columnIndex="0"
                GridPane.halignment="LEFT"
                GridPane.rowIndex="0"/>

        <ComboBox
                fx:id="clientCB"
                maxWidth="Infinity"
                GridPane.columnIndex="0"
                GridPane.columnSpan="2"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="1"/>

        <Label
                text="Бокс:"
                GridPane.columnIndex="0"
                GridPane.halignment="LEFT"
                GridPane.rowIndex="2"/>

        <ComboBox
                fx:id="lotCB"
                maxWidth="Infinity"
                GridPane.columnIndex="0"
                GridPane.columnSpan="2"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="3"/>

        <Label
                text="Авто:"
                GridPane.columnIndex="0"
                GridPane.halignment="LEFT"
                GridPane.rowIndex="4"/>

        <ComboBox
                fx:id="autoCB"
                maxWidth="Infinity"
                GridPane.columnIndex="0"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="5"/>

        <Button
                text="Добавить автомобиль"
                maxWidth="Infinity"
                GridPane.columnIndex="1"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="5"/>

        <Label
                text="Время и дата начала стоянки"
                GridPane.columnIndex="0"
                GridPane.halignment="LEFT"
                GridPane.rowIndex="6"/>

        <DateTimePicker
                fx:id="startDateDP"
                maxWidth="Infinity"
                format="dd.MM.yyyy HH:mm"
                GridPane.columnIndex="0"
                GridPane.columnSpan="2"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="7"/>

        <Label
                text="Сотрудник:"
                GridPane.columnIndex="0"
                GridPane.halignment="LEFT"
                GridPane.rowIndex="8"/>

        <ComboBox
                fx:id="employeesCB"
                maxWidth="Infinity"
                GridPane.columnIndex="0"
                GridPane.columnSpan="2"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="9"/>

        <Button
                fx:id="okBTN"
                onMouseClicked="#parkCarClick"
                text="ОК"
                maxWidth="Infinity"
                GridPane.columnIndex="0"
                GridPane.columnSpan="2"
                GridPane.halignment="CENTER"
                GridPane.rowIndex="10"/>

    </GridPane>
</AnchorPane>
